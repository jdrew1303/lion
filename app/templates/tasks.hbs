<section class="tasks">
  <header>
    <div>
      <h1>Tasks</h1>

      <form class="inline" {{action "createTask" on="submit"}}>
        <div class="input">
          {{input type="text" value=newTitle placeholder="What needs to be done?"}}
        </div>

        <div class="submit">
          {{input type="submit" value="Add Task"}}
        </div>
      </form>

      <div class="filters">
        <span class="remaining-items">{{{remainingFormatted}}}</span>

        <dl>
          <dt>Filter</dt>
          {{#link-to "tasks.index" (query-params filter=Ember.null) tagName="dd"}}
            <a>All</a>
          {{/link-to}}

          {{#link-to "tasks.index" (query-params filter="mine") tagName="dd"}}
            <a>Mine</a>
          {{/link-to}}
        </dl>
      </div>
    </div>
  </header>

  <section class="content">
    <ul>
      {{#each sortedTasks itemController="taskItem" itemView="taskItem"}}{{/each}}
    </ul>

    {{outlet}}
  </section>
</section>
