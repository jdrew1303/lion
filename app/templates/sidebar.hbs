<header>
  <img src="assets/images/logo.png" alt="Lion"/>
  <h1>Lion</h1>
</header>

{{#as-scrollable tagName="nav"}}
  <header>
    <div class="toggle-collapse">
      <button {{action "toggleCollapse" target=view}}></button>
    </div>

    <h1>Menu</h1>
  </header>

  <ul>
    <li class="leaderboard">
      {{#link-to "leaderboard"}}<i></i><span>Leaderboard</span>{{/link-to}}
    </li>

    <li class="hall-of-fame">
      {{#link-to "hall-of-fame"}}<i></i><span>Hall of Fame</span>{{/link-to}}
    </li>

    <li class="stats">
      {{#link-to "stats"}}<i></i><span>Stats</span>{{/link-to}}
    </li>
  </ul>
{{/as-scrollable}}

<section class="user-session">
  <div class="toggle-actions">
    {{#rl-dropdown-container class="dropdown"}}
      {{#rl-dropdown-toggle class="actions"}}{{/rl-dropdown-toggle}}

      {{#rl-dropdown tagName="ul" class="top" closeOnChildClick=true}}
        <li><a {{action "invalidateSession"}}>Logout</a></li>
      {{/rl-dropdown}}
    {{/rl-dropdown-container}}
  </div>

  <div class="picture">
    <img alt="Profile Picture"
    {{bind-attr src=currentUser.avatarUrl title=currentUser.initials}} />
  </div>

  <div class="name">{{currentUser.name}}</div>
</section>
